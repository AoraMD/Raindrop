<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="moe.aoramd.raindrop.view.main.MainActivity" />

        <variable
            name="viewModel"
            type="moe.aoramd.raindrop.view.main.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> viewModel.openPlayInterface()}"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:progress="@{viewModel.musicBarProgress}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="48dp"
            android:paddingTop="12dp"
            android:paddingEnd="24dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/song_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:text="@{viewModel.musicBarSongName}"
                android:textColor="@color/colorFront"
                android:textSize="16sp"
                tools:text="Song Title" />

            <ImageView
                android:id="@+id/previous_song_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/description_previous_song"
                android:onClick="@{() -> viewModel.playerSkipToPrevious()}"
                android:padding="8dp"
                android:src="@drawable/ic_skip_previous"
                android:tint="@color/colorFront" />

            <ImageView
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/description_play"
                android:onClick="@{() -> viewModel.playerPlay()}"
                android:padding="8dp"
                android:src="@{viewModel.musicBarPlaying ? @drawable/ic_pause : @drawable/ic_play}"
                android:tint="@color/colorFront"
                tools:src="@drawable/ic_play" />

            <ImageView
                android:id="@+id/next_song_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/description_next_song"
                android:onClick="@{() -> viewModel.playerSkipToNext()}"
                android:padding="8dp"
                android:src="@drawable/ic_skip_next"
                android:tint="@color/colorFront" />

        </LinearLayout>

    </LinearLayout>

</layout>